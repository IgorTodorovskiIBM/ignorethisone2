    if hsmfile = null
    then mfile = The HSM Report Database is Required!
    else mfile = testdsn(hsmfile)
    if hsmmcds = null
    then mc1 = The HSM MCDS Dataset is Required!
    else mc1 = testdsn(hsmmcds)
    if hsmmcds2 /= null
    else mc2 = testdsn(hsmmcds2)
    if hsmmcds3 /= null
    else mc3 = testdsn(hsmmcds3)
    if hsmmcds4 /= null
    else mc4 = testdsn(hsmmcds4)
    if hsmbcds = null
    then mb1 = The HSM BCDS Dataset is Required!
    else mb1 = testdsn(hsmbcds)
    if hsmbcds2 /= null
    else mb2 = testdsn(hsmbcds2)
    if hsmbcds3 /= null
    else mb3 = testdsn(hsmbcds3)
    if hsmbcds4 /= null
    else mb4 = testdsn(hsmbcds4)
